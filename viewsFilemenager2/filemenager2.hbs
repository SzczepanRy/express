<script>
	async function deleteFile(name){
		console.log(name)
		let res = await fetch("http://localhost:3000/delete2?name="+name,{
			method:'GET',
			options:{
				"Content-type":"application/json"
			}
		})
		window.location.reload()
	}
</script>