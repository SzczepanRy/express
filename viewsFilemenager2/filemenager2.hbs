<link rel='stylesheet' href='css/filemenager.css' />
{{> aside2 }}


<div class="filemenager2">


	<div class="folders">

		{{#each files}}
		{{#if (checkFolder this.obraz) }}

		<div class="file2">
			<div class="">
			<img src="{{this.obraz}}" alt="{{this.obraz}}">
			<button onclick="deleteFile('{{this.name}}')" >x</button>
				
			</div>
					
			<p>{{this.name}}</p>
		</div>
		{{/if}}
		{{/each}}
	</div>

	<div class="files2">

		{{#each files}}
		{{#if (checkFolder this.obraz) }}
		{{else}}
		<div class="file2">
			<div class="">
			<img src="{{this.obraz}}" alt="{{this.obraz}}">
			<button onclick="deleteFile('{{this.name}}')" >x</button>
			
			</div>
					
			<p>{{this.name}}</p>
		</div>
		{{/if}}
		
		{{/each}}
	</div>

	
</div>

<script>
	
	async function deleteFile(name){
		
		await fetch("http://localhost:3000/delete2",{
			method:'POST',
			headers:{
				"Content-type":"application/json"
			},
			body:JSON.stringify({name})
		})
		
	   	window.location.reload()
	}
	
</script>